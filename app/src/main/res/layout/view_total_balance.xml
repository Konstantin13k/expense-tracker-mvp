<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/total_balance_container"
    style="@style/balance_card_style">

    <TextView
        android:id="@+id/label_total_balance"
        style="@style/balance_label_style"
        android:layout_gravity="center_horizontal"
        android:text="@string/label_total_balance"
        tools:text="total balance" />

    <TextView
        android:id="@+id/total_balance"
        style="@style/balance_text_style"
        android:layout_gravity="center_horizontal"
        tools:text="$30,000" />

</androidx.cardview.widget.CardView>