<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style">
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="income_expense_icon_style">
        <item name="android:layout_width">@dimen/income_expense_icon_size</item>
        <item name="android:layout_height">@dimen/income_expense_icon_size</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/income_expense_icon_margin</item>
        <item name="android:layout_marginEnd">@dimen/income_expense_icon_margin</item>
    </style>

    <style name="balance_card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/balance_view_height</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="cardCornerRadius">@dimen/balance_card_corner_radius</item>
    </style>

    <style name="balance_label_style" parent="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/balance_label_margin_top</item>
        <item name="android:textColor">?attr/subtitleTextColor</item>
        <item name="android:textSize">@dimen/balance_label_size</item>
    </style>

    <style name="balance_text_style" parent="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/balance_text_margin_top</item>
        <item name="android:textSize">@dimen/balance_text_size</item>
    </style>

    <style name="income_expense_label_style" parent="balance_label_style">
        <item name="android:layout_marginStart">@dimen/income_expense_label_margin_start</item>
        <item name="android:layout_marginTop">@dimen/income_expense_label_margin_top</item>
    </style>

    <style name="income_expense_text_style" parent="balance_text_style">
        <item name="android:layout_marginTop">@dimen/income_expense_text_margin_top</item>
        <item name="android:layout_marginStart">@dimen/income_expense_text_margin_start</item>
    </style>

    <style name="title_label_style" parent="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/recent_transactions_label_size</item>
    </style>

    <style name="recent_transactions_rv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/recent_transactions_rv_margin_horiz</item>
        <item name="android:layout_marginTop">@dimen/recent_transactions_rv_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/recent_transactions_rv_margin_horiz</item>
    </style>

    <style name="add_transaction_fab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/add_transaction_fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/add_transaction_fab_margin</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="transaction_icon_style">
        <item name="android:layout_width">@dimen/transaction_icon_background_size</item>
        <item name="android:layout_height">@dimen/transaction_icon_background_size</item>
        <item name="android:background">@drawable/transaction_icon_background</item>
        <item name="android:padding">@dimen/transaction_icon_padding</item>
    </style>

    <style name="transaction_title_style" parent="text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/transaction_title_margin_start</item>
        <item name="android:layout_marginTop">@dimen/transaction_title_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/transaction_title_margin_end</item>
        <item name="android:textSize">@dimen/transaction_title_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="transaction_amount_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/transaction_amount_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/transaction_amount_margin_end</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textSize">@dimen/transaction_amount_size</item>
    </style>

    <style name="transaction_date_style" parent="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/transaction_date_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/transaction_date_margin_end</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/transaction_date_size</item>
    </style>

    <style name="transaction_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ExposedInputLayout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/transaction_et_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/transaction_et_margin_horizontal</item>
        <item name="android:layout_marginStart">@dimen/transaction_et_margin_horizontal</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="transaction_input_text_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="transaction_input_drop_down_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.ExposedDropdownMenu</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/transaction_et_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/transaction_et_margin_horizontal</item>
        <item name="android:layout_marginStart">@dimen/transaction_et_margin_horizontal</item>
        <item name="errorEnabled">true</item>
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <style name="transaction_input_date_style" parent="transaction_input_layout_style">
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_calendar</item>
    </style>

    <style name="transaction_date_picker_style" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">?attr/colorSecondary</item>
        <item name="colorOnPrimary">?attr/colorOnSecondary</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
    </style>

    <style name="details_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/details_text_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/details_label_margin_top</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">?attr/subtitleTextColor</item>
        <item name="android:textSize">@dimen/details_label_size</item>
    </style>

    <style name="details_text_style" parent="text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/details_text_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/details_text_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/details_text_margin_horizontal</item>
        <item name="android:textSize">@dimen/details_text_size</item>
    </style>

    <style name="edit_transaction_fab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/edit_transaction_fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/edit_transaction_fab_margin</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="transactions_list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/transactions_list_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/transactions_list_margin_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/transactions_list_padding_top</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="see_all_transactions_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/recent_transactions_label_margin_start</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">?attr/subtitleTextColor</item>
        <item name="android:textSize">@dimen/label_see_all_transactions_size</item>
    </style>

</resources>