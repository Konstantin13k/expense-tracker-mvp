<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="income_expense_icon_style">
        <item name="android:layout_width">@dimen/income_expense_icon_size</item>
        <item name="android:layout_height">@dimen/income_expense_icon_size</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/income_expense_icon_margin</item>
        <item name="android:layout_marginEnd">@dimen/income_expense_icon_margin</item>
    </style>

    <style name="balance_card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/balance_view_height</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="cardCornerRadius">@dimen/balance_card_corner_radius</item>
    </style>

    <style name="balance_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">@dimen/balance_label_margin_top</item>
        <item name="android:textColor">?attr/subtitleTextColor</item>
        <item name="android:textSize">@dimen/balance_label_size</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="balance_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/balance_text_margin_top</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/balance_text_size</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="income_expense_label_style" parent="balance_label_style">
        <item name="android:layout_marginStart">@dimen/income_expense_label_margin_start</item>
        <item name="android:layout_marginTop">@dimen/income_expense_label_margin_top</item>
    </style>

    <style name="income_expense_text_style" parent="balance_text_style">
        <item name="android:layout_marginTop">@dimen/income_expense_text_margin_top</item>
        <item name="android:layout_marginStart">@dimen/income_expense_text_margin_start</item>
    </style>

    <style name="title_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/recent_transactions_label_size</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="recent_transactions_rv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/recent_transactions_rv_margin_horizontal
        </item>
        <item name="android:layout_marginTop">@dimen/recent_transactions_rv_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/recent_transactions_rv_margin_horizontal</item>
    </style>

    <style name="add_transaction_fab_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/add_transaction_fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/add_transaction_fab_margin</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

</resources>